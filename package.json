{
  "name": "usx",
  "version": "2.0.1",
  "description": "Reactive vanilla jsx",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "nyc --reporter=html --reporter=text mocha test/**/*.ts",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andrew24601/usx.git"
  },
  "author": "Andrew Barry",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/andrew24601/usx/issues"
  },
  "homepage": "https://github.com/andrew24601/usx#readme",
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.7",
    "chai": "^4.2.0",
    "coveralls": "^3.0.4",
    "jsdom": "^16.5.0",
    "jsdom-global": "^3.0.2",
    "mocha": "^5.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "^12.0.2",
    "ts-node": "^8.8.1",
    "typescript": "^3.8.3"
  },
  "files": [
    "dist"
  ],
  "nyc": {
    "include": [
      "lib/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
